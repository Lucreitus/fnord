/**********************************************************************
 *
 * z = x**2 + y**2
 * domain:
 *   0 <x < 1
 *   0 < y < sqrt(1-(y/2)**2)
 **********************************************************************/

dom := Grid( (0,1,12),(0,1,12) );

ui := Interval( 0,1,2);

dommap1 := R^2 -> R^2
       : [u,v] -> [sqrt(1-v**2)u, v ]
	;

dommap2 := R^2 -> R^2
       : [u,v] -> [u, sqrt(1-u**2)*v]
	;

f := R^2 -> R^3
	: [x,y] -> [x,y,exp(x)]
	;

V := widget type<-`view;

/* axes */
widget type<-`vobject, parent<-`V, color<-"black",
	set<-( Axes );

/* xy plane sheet */
widget type<-`vobject, parent<-`V, color<-"green",
	set<-( f(dommap1(dom) ) );

/* xy plane sheet */
widget type<-`vobject, parent<-`V, color<-"green",
	set<-( dommap1(dom) >< {0.0} );


/* missing edges */
s1 := R -> R: t -> exp(1)*t;

widget type<-`vobject, parent<-`V, color<-"green",
	set<-( [{1}><{0}><s1(ui)] );
widget type<-`vobject, parent<-`V, color<-"green",
	set<-( [{0}><{1}><ui] );


/* now the cutting plane */
cuti := Interval( 0,1,8 );

cutx := widget Slider(0,1), init<-0, name<-"X cut (red)";
cuty := widget Slider(0,1), init<-0, name<-"Y cut (blue)";


slice1 := R^3->R^3 
	: [x,y,z] -> f(dommap1[x,y])*z +
	             (1-z)[dommap1([x,y])^1, dommap1([x,y])^2,0]
	;

slice2 := R^3->R^3 
	: [x,y,z] -> f(dommap2[x,y])*z +
	             (1-z)[dommap2([x,y])^1, dommap2([x,y])^2,0]
	;

/* cut x */
widget type<-`vobject, parent<-`V, color<-"red",
	set<-( slice2( [{cutx}><cuti><ui] ) ); 

/* cut x */
widget type<-`vobject, parent<-`V, color<-"blue",
	set<-( slice1( [cuti><{cuty}><ui] ) );
